@using ABC_BankApi.Model;
@model List<Contacto>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">ABC Bank</h1>    
</div>

<div class="card">
    <div class="card-header">
        Lista de Contactos
    </div>
    <div class="card-body">
        <a asp-action="Contacto" asp-controller="Home" asp-route-id="0" class="btn btn-success btn-sm">Nuevo Contacto</a>

        <table class="table" id="tabla">
            <thead>
                <tr>
                    <th>Nombres</th>
                    <th>Dirección</th>
                    <th>Fecha Nacimiento</th>
                    <th>Teléfono</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                   <tr>
                       <td>@item.Nombres</td>
                       <td>@item.Direccion</td>
                       <td>@item.Fecha_Nac</td>
                       <td>@item.Telefono</td>
                       <td>
                            <a asp-action="Contacto" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-primary btn-sm"> Editar</a>
                            <a asp-action="Eliminar" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger btn-sm"> Eliminar</a>
                       </td>
                   </tr>
                   
                }

            </tbody>
        </table>
    </div>
</div>

    
